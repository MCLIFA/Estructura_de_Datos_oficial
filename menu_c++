#include <iostream>
using namespace std;

int main() {
    int opcion;

    do {
        cout << "\n--- Menu ---" << endl;
        cout << "1. Suma de dos numeros" << endl;
        cout << "2. Ver si un numero es CAPICUA" << endl;
        cout << "3. Factorial de un numero" << endl;
        cout << "0. Salir" << endl;
        cout << "Elija una opcion: ";
        cin >> opcion;

        // Usamos llaves {} en los cases donde declaramos variables nuevas
        switch (opcion) {
        case 1: {
            int a, b, c;
            cout << "Ingrese el primer valor: ";
            cin >> a;
            cout << "Ingrese el segundo valor: ";
            cin >> b;
            c = a + b;
            cout << "El resultado de su suma es: " << c << endl;
            break;
        }

        case 2: {
            int N, d;
            int N_invertido = 0; // Cambiado a int para evitar problemas de precisiÃ³n
            cout << "Ingrese un numero entero: ";
            cin >> N;

            int N_original = N;
            while (N > 0) {
                d = N % 10;
                N_invertido = N_invertido * 10 + d;
                N = N / 10;
            }

            if (N_original == N_invertido) {
                cout << "El numero " << N_original << " es CAPICUA." << endl;
            }
            else {
                cout << "El numero " << N_original << " NO es capicua. Invertido es: " << N_invertido << endl;
            }
            break;
        }

        case 3: {
            int n, factorial = 1;
            do {
                cout << "Ingresar el valor de n (debe ser positivo): ";
                cin >> n;
                if (n < 0) {
                    cout << "El valor no puede ser negativo. Intente de nuevo." << endl;
                }
            } while (n < 0);

            // El factorial de 0 es 1, por eso empezamos desde i = 1
            for (int i = 1; i <= n; i++) {
                factorial = factorial * i;
            }
            cout << "El factorial de " << n << " es: " << factorial << endl;
            break;
        }

        case 0:
            cout << "Saliendo del programa..." << endl;
            break;

        default:
            cout << "Opcion invalida" << endl;
            break;
        }
    } while (opcion != 0);

    return 0;
}
